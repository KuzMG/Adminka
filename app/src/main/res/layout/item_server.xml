<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <EditText
        android:id="@+id/id_edit_view"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/id_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_edit_view">

    </TextView>
    <EditText
        android:id="@+id/name_edit_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/name_text_view"
        app:layout_constraintTop_toBottomOf="@id/id_edit_view"/>

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="job_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_edit_view">

    </TextView>
    <EditText
        android:id="@+id/price_edit_view"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/price_text_view"
        app:layout_constraintTop_toBottomOf="@id/name_edit_view"/>


    <TextView
        android:id="@+id/id_cpu_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_edit_view">
    </TextView>
    <EditText
        android:id="@+id/id_cpu_edit_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/id_cpu_text_view"
        app:layout_constraintTop_toBottomOf="@id/price_edit_view"/>

    <TextView
        android:id="@+id/id_ram_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="experience"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_cpu_edit_view">

    </TextView>
    <EditText
        android:id="@+id/id_ram_edit_view"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/id_ram_text_view"
        app:layout_constraintTop_toBottomOf="@id/id_cpu_edit_view"/>

    <TextView
        android:id="@+id/id_drive_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_ram_edit_view">

    </TextView>
    <EditText
        android:id="@+id/id_drive_edit_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/id_drive_text_view"
        app:layout_constraintTop_toBottomOf="@id/id_ram_edit_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/id_drive_edit_view">
        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обновить"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>